# ============================================================================
# DevFork Arena Configuration
# ============================================================================

# ============================================================================
# Environment
# ============================================================================
ENVIRONMENT=development
DEBUG=true

# ============================================================================
# API Keys (REQUIRED)
# ============================================================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# ============================================================================
# Database Configuration
# ============================================================================
TIGERDATA_CONNECTION_STRING=postgresql://user:password@host:port/database
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30
DB_QUERY_TIMEOUT=30
DB_MAX_RETRIES=3
DB_RETRY_DELAY=1.0

# ============================================================================
# Agent Configuration
# ============================================================================

# Default agent parameters
AGENT_DEFAULT_TEMPERATURE=0.7
AGENT_DEFAULT_MAX_TOKENS=4096
AGENT_DEFAULT_MAX_ITERATIONS=3

# Timeouts (seconds)
AGENT_TIMEOUT_SECONDS=300
CODE_EXECUTION_TIMEOUT=5
COMPETITION_TIMEOUT_SECONDS=1800

# Retries
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=2.0

# Concurrency
MAX_CONCURRENT_AGENTS=10

# ============================================================================
# Model Configuration
# ============================================================================

# Default provider (openai or anthropic)
DEFAULT_PROVIDER=openai

# OpenAI models
OPENAI_DEFAULT_MODEL=gpt-4-turbo-preview
OPENAI_FAST_MODEL=gpt-3.5-turbo
OPENAI_POWERFUL_MODEL=gpt-4

# Anthropic models
ANTHROPIC_DEFAULT_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_FAST_MODEL=claude-3-haiku-20240307
ANTHROPIC_POWERFUL_MODEL=claude-3-opus-20240229

# ============================================================================
# API Server Configuration
# ============================================================================

# Server settings
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS settings (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Request limits
MAX_REQUEST_SIZE_MB=10

# ============================================================================
# Competition Configuration
# ============================================================================

# Competition limits
MIN_AGENTS_PER_COMPETITION=2
MAX_AGENTS_PER_COMPETITION=50

# Timeouts
DEFAULT_COMPETITION_TIMEOUT=300

# Status polling
STATUS_POLL_INTERVAL=5

# Scoring weights
SCORE_BASE=1000
SCORE_TIME_WEIGHT=0.3
SCORE_ATTEMPTS_WEIGHT=0.2

# ============================================================================
# Logging Configuration
# ============================================================================

LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_ENABLED=false
LOG_FILE_PATH=logs/devfork_arena.log

# ============================================================================
# Security Configuration (Optional)
# ============================================================================

# Authentication (not yet implemented)
AUTH_ENABLED=false
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
